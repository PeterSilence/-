<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.juane.peapyoung.dao.UsagerDao">
    <insert id="saveUsager">
        insert into usager(id,name,sex,phone,avator,password,schoolPosition)
        values (#{id},#{name},#{sex},#{phone},#{avator},#{password},#{schoolPosition});
    </insert>

    <update id="updateUsager">
        update usager
        set name = #{name},sex = #{sex},phone = #{phone},schoolPosition = #{schoolPosition}
        where id = #{id};
    </update>

    <update id="modifyStatus">
        update usager
        set aId = #{aId},status = #{status}
        where id = #{id};
    </update>
</mapper>