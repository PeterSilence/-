<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.juane.peapyoung.dao.UsagerDao">
    <insert id="saveUsager">
        insert into usager(id,sId,sex,phone,avator)
        values (#{id},#{sId},#{sex},#{phone},#{avator});
    </insert>

    <update id="updateUsager">
        update usager
        set sex = #{sex},phone = #{phone}
        where id = #{id};
    </update>

    <update id="modifyStatus">
        update usager
        set sId = #{sId},status = #{status}
        where id = #{id};
    </update>
</mapper>