<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.juane.peapyoung.dao.AdministrateurDao">

    <insert id="savaData">
        insert into administrateur(id,password,name,phone)
        values(#{id},#{password},#{name},#{phone});
    </insert>

    <update id="updateData">
        update administrateur
        set name = #{name}, password = #{password}, phone = #{phone} where id = #{id};
    </update>

    <update id="deleteDataByOwner">
        update administrateur
        set status = 0;
    </update>

    <select id="selectByConditions" resultType="com.juane.peapyoung.entity.Administrateur">
        select * from administrateur
        <where>
            <if test="administrateur.id != null and administrateur.id != ''">
                and id = #{administrateur.id}
            </if>
            <if test="administrateur.name != null and administrateur.name != ''">
                and name = #{administrateur.name}
            </if>
            <if test="administrateur.phone != null and administrateur.phone != ''">
                and phone = #{administrateur.phone}
            </if>
        </where>
    </select>

</mapper>